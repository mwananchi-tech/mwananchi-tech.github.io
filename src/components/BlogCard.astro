---
interface Props {
  title: string;
  date: Date;
  excerpt?: string;
  slug: string;
}

const { title, date, excerpt, slug } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<a
  href={`/blog/${slug}`}
  class="blog-card"
  style="display: block; text-decoration: none;"
>
  <h3 class="blog-card-title">{title}</h3>
  <p class="blog-card-meta">{formattedDate}</p>
  {excerpt && <p class="blog-card-excerpt">{excerpt}</p>}
</a>
